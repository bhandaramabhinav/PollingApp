<!DOCTYPE html>
@{
    
    Layout = null;
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/css/foundation.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.css">
    <link href="~/Content/css/foundation-icons/foundation-icons.css" rel="stylesheet" />
</head>
<body ng-app="app" ng-controller="HomeController">     
    <div id="popupContainer"></div>
    <div class="main">
        <header class="header">
            <h1 class="headline">Whats Ur Say!!</h1>
            <ul class="header-subnav">
                <li ng-if="userInfo.isAuth"><a href="#/createPoll">Create Poll!</a></li>
                <li ng-if="userInfo.isAuth"><a href="#/createSurvey">Create Survey!</a></li>
                <li ng-if="userInfo.isAuth"><a href="#/createGroup">Create Group!</a></li>
                <li ng-if="userInfo.isAuth"><a href="#/participatePoll" class="is-active">Participate Poll!</a></li>
                <li ng-if="!userInfo.isAuth"><a href="#/login">Login!</a></li>
                <li ng-if="userInfo.isAuth"><a ng-click="LogOut()">Log Out!</a></li>
                <li ng-if="!userInfo.isAuth"><a href="#/join">Join!</a></li>
                <li ng-if="userInfo.isAuth"><a href="#/participateSurvey">Participate Survey</a></li>
                <li ng-if="userInfo.isAuth"><a href="#/viewSurveyResults">View Survey Results</a></li>
                <li ng-if="userInfo.isAuth"><a href="#/viewPollResults">View Poll Results</a></li>
            </ul>
        </header>  
        <div class="row main" ng-view></div>    
    </div>
    
    <footer class="footer" style="height:10%">
        <div class="row">
            <div class="small-3 large-6 columns">&copy;DSE's</div>
            <div class="small-3 large-6 columns">
                <ul class="menu">
                    <li>
                        <a href="#">About Us</a>
                    </li>
                    <li>
                        <a href="#">Team</a>
                    </li>
                </ul>
            </div>
        </div>
    </footer>

    <script src="~/scripts/jquery-1.10.2.min.js"></script>
    <script src="~/scripts/js/foundation.min.js"></script>
    <script src="~/scripts/js/what-input.js"></script>
    <script src="~/scripts/angular.min.js"></script>
    <script src="~/scripts/angular-route.min.js"></script>
    <script src="~/scripts/angular-animate.min.js"></script>
    <script src="~/scripts/angular-aria.min.js"></script>
    <script src="~/scripts/angular-messages.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.js"></script>
    <script src="https://cdn.jsdelivr.net/ngstorage/0.3.6/ngStorage.min.js"></script>
    <script src="~/scripts/app/app.js"></script>
    <script src="~/scripts/app/HomeController.js"></script>
    <script src="~/scripts/app/LoginController.js"></script>
    <script src="~/scripts/app/PollController.js"></script>
    <script src="~/scripts/app/GroupController.js"></script>
    <script src="~/scripts/app/SurveyController.js"></script>
    <script src="~/scripts/app/ParticipateSurveyController.js"></script>
